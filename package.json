{
  "name": "promark-ribbon-calculator",
  "version": "1.0.2",
  "productName": "Калькулятор ріббонів Promark",
  "description": "Інтерактивний підбірник ріббонів для друку",
  "main": "main.js",
  "author": "Promark",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:all": "electron-builder --mac --win"
  },
  "dependencies": {
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.promark.ribbon-calculator",
    "productName": "Калькулятор ріббонів Promark",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "planetaOY",
        "repo": "promark-ribbon"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/icons/icon.icns",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "uninstallDisplayName": "${productName} Uninstaller",
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico",
      "unicode": true,
      "warningsAsErrors": false,
      "include": "build/installer.nsh"
    }
  }
}